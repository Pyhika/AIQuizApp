# Application
NODE_ENV=development
PORT=3000
APP_NAME=AIQuizApp

# Database - PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_password_here
DB_NAME=aiquizapp
DATABASE_URL=postgresql://${DB_USERNAME}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRATION=7d
JWT_REFRESH_SECRET=your_refresh_secret_key_here_change_in_production
JWT_REFRESH_EXPIRATION=30d

# AI Services
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-opus-20240229
ANTHROPIC_MAX_TOKENS=2000

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=.pdf,.txt,.docx,.jpg,.jpeg,.png

# CORS
CORS_ORIGIN=http://localhost:3001,http://localhost:8081,exp://localhost:8081

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Email (Optional - for future features)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@aiquizapp.com

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Sentry (Optional - for error tracking)
SENTRY_DSN=

# API Documentation
SWAGGER_ENABLED=true
SWAGGER_PATH=api-docs

# Session
SESSION_SECRET=your_session_secret_here_change_in_production
SESSION_TTL=86400

# Queue (Bull)
QUEUE_REDIS_HOST=${REDIS_HOST}
QUEUE_REDIS_PORT=${REDIS_PORT}

# Storage (for file uploads)
STORAGE_TYPE=local
STORAGE_LOCAL_PATH=./uploads
# For S3 (future)
# STORAGE_TYPE=s3
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_S3_BUCKET=
# AWS_S3_REGION=