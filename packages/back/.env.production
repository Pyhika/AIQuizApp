# Production Environment Configuration Template
# DO NOT COMMIT THIS FILE WITH REAL VALUES

# Application
NODE_ENV=production
PORT=3000
APP_NAME=AIQuizApp

# Database - PostgreSQL
DB_HOST=${DB_HOST}
DB_PORT=5432
DB_USERNAME=${DB_USERNAME}
DB_PASSWORD=${DB_PASSWORD}
DB_NAME=${DB_NAME}
DATABASE_URL=${DATABASE_URL}

# Redis
REDIS_HOST=${REDIS_HOST}
REDIS_PORT=6379
REDIS_PASSWORD=${REDIS_PASSWORD}
REDIS_DB=0

# JWT Authentication (Use strong secrets in production!)
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRATION=7d
JWT_REFRESH_SECRET=${JWT_REFRESH_SECRET}
JWT_REFRESH_EXPIRATION=30d

# AI Services
OPENAI_API_KEY=${OPENAI_API_KEY}
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY}
ANTHROPIC_MODEL=claude-3-opus-20240229
ANTHROPIC_MAX_TOKENS=2000

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=.pdf,.txt,.docx,.jpg,.jpeg,.png

# CORS (Configure for your production domains)
CORS_ORIGIN=${CORS_ORIGIN}

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Email
SMTP_HOST=${SMTP_HOST}
SMTP_PORT=${SMTP_PORT}
SMTP_USER=${SMTP_USER}
SMTP_PASSWORD=${SMTP_PASSWORD}
SMTP_FROM=${SMTP_FROM}

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Sentry (Error tracking)
SENTRY_DSN=${SENTRY_DSN}

# API Documentation (Consider disabling in production)
SWAGGER_ENABLED=false
SWAGGER_PATH=api-docs

# Session
SESSION_SECRET=${SESSION_SECRET}
SESSION_TTL=86400

# Queue
QUEUE_REDIS_HOST=${REDIS_HOST}
QUEUE_REDIS_PORT=${REDIS_PORT}

# Storage (S3 for production)
STORAGE_TYPE=s3
AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}
AWS_S3_BUCKET=${AWS_S3_BUCKET}
AWS_S3_REGION=${AWS_S3_REGION}