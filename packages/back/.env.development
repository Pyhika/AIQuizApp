# Development Environment Configuration
# Copy this file to .env for local development

# Application
NODE_ENV=development
PORT=3000
APP_NAME=AIQuizApp-Dev

# Database - PostgreSQL (Docker)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres123
DB_NAME=aiquizapp_dev
DATABASE_URL=postgresql://${DB_USERNAME}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# Redis (Docker)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Authentication (Development keys - CHANGE IN PRODUCTION!)
JWT_SECRET=dev_jwt_secret_key_do_not_use_in_production
JWT_EXPIRATION=7d
JWT_REFRESH_SECRET=dev_refresh_secret_key_do_not_use_in_production
JWT_REFRESH_EXPIRATION=30d

# AI Services (Add your API keys here)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_MAX_TOKENS=2000

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=.pdf,.txt,.docx,.jpg,.jpeg,.png

# CORS (Allow all local development servers)
CORS_ORIGIN=http://localhost:3001,http://localhost:8081,exp://localhost:8081,http://localhost:19000,http://localhost:19001,http://localhost:19002

# Rate Limiting (Relaxed for development)
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=1000

# Logging
LOG_LEVEL=debug
LOG_FORMAT=pretty

# API Documentation
SWAGGER_ENABLED=true
SWAGGER_PATH=api-docs

# Session
SESSION_SECRET=dev_session_secret_do_not_use_in_production
SESSION_TTL=86400

# Storage
STORAGE_TYPE=local
STORAGE_LOCAL_PATH=./uploads